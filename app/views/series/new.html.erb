<h1>Listado de Series</h1>
<br><br>
<div class= "justify-content-center">
<div class= "card col-6">
<%= form_with model: @Series, method: :post do |form|%>
<div class="mb-3">
<%= form.label :name, "Serie Name", class: "form-label" %>
<%= form.text_field :name, class: "form-control"%>
</div>
<div class="mb-4">
<%= form.label :synopsis, "Serie Synopsis", class: "form-label" %>
<%= form.text_field :synopsis, class: "form-control"%>
</div>
<div class="mb-4">
<%= form.label :director, "Serie Director", class: "form-label" %>
<%= form.text_field :director, class: "form-control"%>
</div>
</div>
</div>
<div class= "justify-content-center">
<%= form.submit "Enviar", class: "btn btn-dark" %>
</div>

<%end%>